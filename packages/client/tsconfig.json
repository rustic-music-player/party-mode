{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "sourceMap": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules"
  ]
}
